<!DOCTYPE html>
<html>
  <head>
    <title>Airplane Online Ticket Booking System Admin Panel</title>
    <link rel="stylesheet" href="../stylse.css" />
  </head>
  <body>
    <h1 class="head">Airplane Online Ticket Booking System Admin Panel</h1>
    <!-- navigation -->
    <div class="wrapper">
      <nav>
        <ul>
          <li><a href="/Admin/AdminHome">Home</a></li>
          <li><a href="/Admin/Passengers" class="page">Passengers</a></li>
          <li><a href="/Admin/flights">flights</a></li>
          <style>
            .page {
              color: #fff;
              background-color: #000;
              padding: 10px;
              margin: 0% 0% 0% 0%;
            }
          </style>
          <li><a href="adminLogin">log out</a></li>
          <!-- <li><a href="#"></a></li> -->
        </ul>
      </nav>
    </div>
    <div class="c">
      <!-- View all bookings table -->
      <h1><u>View All Booking Passengers</u></h1>
      <br />
      <table id="bookings-table">
        <tr>
          <th>Title</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email</th>
          <th>Country</th>
          <th>Adult/Child</th>
        </tr>
        <!-- Add rows for each booking here -->
        <% if (PassengerDetails) {%> <%PassengerDetails.forEach(Passenger => {%>
        <tr>
          <td><%=Passenger.title%></td>
          <td><%=Passenger.f_name%></td>
          <td><%=Passenger.l_name%></td>
          <td><%=Passenger.email%></td>
          <td><%=Passenger.country%></td>
          <td><%=Passenger.adult_child%></td>
        </tr>
        <% }) %> <% } %>
      </table>
    </div>
    <script>
      const currentURL = window.location.href;
      console.log(currentURL); // outputs the URL of the current page
    </script>
  </body>
</html>
